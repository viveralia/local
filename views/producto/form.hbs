<br>
<br>
<br>
<h1>Form</h1>
<br>
<h1>{{options.title}}
  {{#if options.edit}}
  <span>{{placeToEdit.name}}</span>
  {{/if}}
</h1>
<br>
<br>
<form action="{{options.action}}" method="POST" enctype="multipart/form-data">
  <label for="name">Name</label>
  <input type="text" name="name" id="name" {{#if options.edit}} value="{{placeToEdit.name}}" {{/if}}>
  <br>
  <label for="description">Description</label>
  <input type="text" name="description" id="description" {{#if options.edit}} value="{{placeToEdit.description}}"
    {{/if}}>
  <br>
  <label for="image">Photo</label>
  <input type="file" name="image" id="image">
  <br>
  <label for="price">Price</label>
  <input type="Number" name="price" id="price" {{#if options.edit}} value="{{placeToEdit.price}}" {{/if}}>
  <br>
  <label for="unit">Unit</label>
  <select name="unit" id="unit">
    <option value="Kg">Kg</option>
    <option value="L">L</option>
  </select>
  <br>
  <label for="stock">Stock</label>
  <input type="Number" name="stock" id="stock" {{#if options.edit}} value="{{placeToEdit.stock}}" {{/if}}>
  <br>
  <label for="category">Category</label>
  <select name="category" id="category">
    <option value="" disabled selected>Categoría</option>
    <option value="frutas">Frutas</option>
    <option value="vegetales">Vegetales</option>
    <option value="hierbas">Hierbas</option>
    <option value="carnes">Carnes</option>
    <option value="mariscos">Mariscos</option>
    <option value="lacteos">Lácteos</option>
    <option value="otros">Otros</option>
  </select>
  <br>
  <a href="/all" class="btn btn-outline-secondary">Cancel</a>
  <button type="submit" class="btn btn-info">{{options.buttonText}}</button>
</form>